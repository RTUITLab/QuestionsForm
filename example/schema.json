{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": [
        "name",
        "description",
        "uid",
        "date_start",
        "date_finish",
        "time",
        "is_auto",
        "tests"
    ],
    "properties": {
        "name": {
            "type": "string",
            "title": "Название института"
        },
        "desription": {
            "type": "string",
            "title": "Название навправления"
        },
        "udi": {
            "type": "string",
            "title": "Уникальный id института",
            "examples": [
                "fti"
            ]
        },
        "date_start": {
            "type": "string",
            "title": "Дата начала",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        },
        "date_finish": {
            "type": "string",
            "title": "Дата начала",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        },
        "time": {
            "type": "number",
            "title": "Какое-то время, надо уточнить"
        },
        "is_auto": {
            "type": "boolean",
            "title": "Какой-то флаг"
        },
        "tests": {
            "title": "Основная секция с тестами",
            "type": "object",
            "required": [
                "schoolboy",
                "student"
            ],
            "properties": {
                "schoolboy": {
                    "description": "Вопросы для школьников",
                    "$ref": "#/definitions/testsBlock"
                },
                "student": {
                    "description": "Вопросы для студентов",
                    "$ref": "#/definitions/testsBlock"
                }
            }
        }
    },
    "definitions": {
        "testsBlock": {
            "type": "object",
            "required": [
                "A",
                "B"
            ],
            "properties": {
                "A": {
                    "description": "Пачка вопросов с названием А (уточнить)",
                    "$ref": "#/definitions/tasksPart"
                },
                "B": {
                    "description": "Пачка вопросов с названием B (уточнить)",
                    "$ref": "#/definitions/tasksPart"
                }
            }
        },
        "tasksPart": {
            "type": "array",
            "minItems": 1,
            "title": "Пачка вопросов",
            "items": {
                "$ref": "#/definitions/question"
            }
        },
        "question": {
            "type": "object",
            "title": "Вопрос",
            "required": [
                "text",
                "img",
                "weight",
                "answers"
            ],
            "properties": {
                "text": {
                    "type": "string",
                    "title": "Текст вопроса"
                },
                "img": {
                    "type": "string",
                    "title": "Путь к изображению для вопроса"
                },
                "weight": {
                    "type": "number",
                    "title": "Вес вопроса (количество баллов?)"
                },
                "answers": {
                    "type": "array",
                    "title": "Варианты ответов",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "required": [
                            "is_correct",
                            "text",
                            "img"
                        ],
                        "title": "Ответ на вопрос",
                        "properties": {
                            "is_correct": {
                                "type": "boolean",
                                "title": "Верный ли это ответ"
                            },
                            "text": {
                                "type": "string",
                                "title": "Текст ответа"
                            },
                            "img": {
                                "type": "string",
                                "title": "Путь к изображению ответа"
                            }
                        }
                    }
                }
            }
        }
    }
}