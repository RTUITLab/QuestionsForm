.item {
  position: relative;
  height: 80px;
  width: 100%;
  border-bottom: 1px solid #30333d;
}

.item:hover {
  background-color: #30333d !important;
}

.image {
  position: absolute;
  top: 10px; bottom: 10px; left: 10px;
  width: 60px;
  border-radius: 4px;
  border: 1px solid #595c67;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #000;
  cursor: pointer;
}

.image img {
  max-width: 100%;
  max-height: 100%;
}

.header {
  position: absolute;
  top: 0; bottom: 0; left: 120px; right: 100px;
  line-height: 80px;
  cursor: pointer;
}

.buttons {
  position: absolute;
  top: 0; bottom: 0; right: 30px;
  width: 70px;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  line-height: 80px;
}

.btn {
  display: flex;
}

.btn > fa {
  cursor: pointer;
  color: #595c67;
}

.btn > fa:hover {
  color: #fff;
}
