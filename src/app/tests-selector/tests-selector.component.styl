::-webkit-scrollbar {
  width: 13px;
}

::-webkit-scrollbar-thumb {
  border-radius: 100px;
  box-shadow: inset 0 0 10px 10px #595c67;
  border: solid 4px transparent;
}

::-webkit-scrollbar-thumb:hover {
  box-shadow: inset 0 0 10px 10px #aaa;
  border: solid 4px transparent;
}



.main {
  position: absolute;
  top: 0; bottom: 0; left: 0;
  width: 250px;
  background-color: #262c35;
  border-left: 5px solid #1c2026;
  border-right: 5px solid #1c2026;
  overflow: auto;
}

.main .clearance {
  height: 15px;
}
