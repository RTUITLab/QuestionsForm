input, textarea {outline:none;}
input:active, textarea:active {outline:none;}
:focus {outline:none;}
textarea {resize:none;}
textarea {resize:vertical;}
textarea {resize:horizontal;}

input[type=date]::-webkit-calendar-picker-indicator { display: none }

input[type=date]::-webkit-inner-spin-button,
input[type=date]::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

::-webkit-scrollbar {
  width: 13px;
}

::-webkit-scrollbar-thumb {
  border-radius: 100px;
  box-shadow: inset 0 0 10px 10px #595c67;
  border: solid 4px transparent;
}

::-webkit-scrollbar-thumb:hover {
  box-shadow: inset 0 0 10px 10px #aaa;
  border: solid 4px transparent;
}

.main {
  padding: 20px;
  padding-top: 0;
  position:absolute;
  top:0; bottom: 0; left: 0; right: 0;
}

.option {
  position:absolute;
  top: 10px; bottom: 20px; left: 20px; right: 20px;
  display:flex;
  flex-direction:column;
}

.option > span {
  font-size: 11pt;
  display: block;
  margin: 10px 0;

}

.option > .input {
  display:flex;
  flex-direction:column;
  flex: 1;

  position: relative;
  background-color: #262c35;
  border: 1px solid #595c67;
  border-radius: 4px;
  color: #fff;
  padding: 5px;
  font-size: 9pt;
  resize: none;
  font-family: 'Montserrat' !important;
}

.option > .input:not(.wide) {
  align-self: flex-start;
}


.option > .input::selection {
  color: rgba(0,0,0,.996) !important;
  background: rgba(0,206,253,.996) !important;
}
